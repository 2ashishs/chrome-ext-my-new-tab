{
    "manifest_version": 3,
    "name": "New Links Tab",
    "version": "1.0",
    "description": "Manage your favorite links in a custom new tab page.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "permissions": [
        "storage",
        "activeTab",
        "notifications"
    ]
}
